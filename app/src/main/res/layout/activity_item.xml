<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.alexsander.ItemActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#5566">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/tvUsuario1"
        android:textSize="20dp"
        android:hint="Usuario"
        android:gravity="center"
        android:background="#444B"
        android:textColor="#000" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/etUsuario"
        android:textSize="20dp"
        android:layout_below="@+id/tvUsuario1"
        android:background="#444B"
        android:hint=""
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:text="Salvar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btnSalvar"
        android:background="#444B"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_below="@+id/etUsuario"/>

    <ListView
        android:layout_width="322dp"
        android:layout_height="249dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lvClasse" />

</LinearLayout>
